{% extends 'base.html.twig' %}

{% block title %}Email Verification Required - Atlas{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .verification-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f6f9fc 0%, #edf2f7 100%);
        padding: 20px;
    }

    .verification-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        padding: 2.5rem;
        width: 100%;
        max-width: 500px;
        text-align: center;
    }

    .verification-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background-color: #ebf5ff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .verification-icon i {
        font-size: 2.5rem;
        color: #3a7bd5;
    }

    .verification-title {
        color: #2d3748;
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .verification-subtitle {
        color: #718096;
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .verification-email {
        background-color: #f8fafc;
        border-radius: 8px;
        padding: 1rem;
        margin: 1.5rem 0;
        color: #4a5568;
        font-weight: 500;
    }

    .verification-steps {
        text-align: left;
        background-color: #f8fafc;
        border-radius: 8px;
        padding: 1.5rem;
        margin: 1.5rem 0;
    }

    .verification-steps h3 {
        color: #2d3748;
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    .verification-steps ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .verification-steps li {
        color: #4a5568;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
    }

    .verification-steps li i {
        color: #3a7bd5;
        margin-right: 0.75rem;
        font-size: 1.1rem;
    }

    .verification-footer {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e2e8f0;
        color: #718096;
    }

    .verification-footer a {
        color: #3a7bd5;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s;
    }

    .verification-footer a:hover {
        color: #2d62b0;
        text-decoration: underline;
    }

    @media (max-width: 640px) {
        .verification-card {
            padding: 1.5rem;
        }

        .verification-title {
            font-size: 1.5rem;
        }

        .verification-subtitle {
            font-size: 1rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="verification-container">
    <div class="verification-card">
        <div class="verification-icon">
            <i class="fas fa-envelope"></i>
        </div>

        <h1 class="verification-title">Check Your Email</h1>
        <p class="verification-subtitle">We've sent you a verification link to complete your registration</p>

        {% if email is defined %}
        <div class="verification-email">
            <i class="fas fa-at"></i> {{ email }}
        </div>
        {% endif %}

        <div class="verification-steps">
            <h3><i class="fas fa-list-ol"></i> Next steps:</h3>
            <ul>
                <li>
                    <i class="fas fa-envelope-open"></i>
                    Open the email we just sent you
                </li>
                <li>
                    <i class="fas fa-mouse-pointer"></i>
                    Click on the verification button
                </li>
                <li>
                    <i class="fas fa-sign-in-alt"></i>
                    Log in to your new account
                </li>
            </ul>
        </div>

        <div class="verification-footer">
            <p>Didn't receive the email? Check your spam folder or <a href="{{ path('app_register') }}">try registering again</a></p>
            <p>Already verified? <a href="{{ path('app_login') }}">Log in here</a></p>
        </div>
    </div>
</div>
{% endblock %} 