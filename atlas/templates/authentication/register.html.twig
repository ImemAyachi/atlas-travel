{% extends 'base.html.twig' %}

{% block title %}Registration - Atlas{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('templates/security/register.css') }}">
{% endblock %}

{% block body %}
<div class="row-container">
    <!-- Left side - Background image -->
    <div class="left-side">
        <div class="atlas-brand">
            ATLAS
        </div>
        
        <div class="bottom-content">
            <p class="tagline">Plan your dream vacation.</p>
            <h2 class="slogan">We guide and<br>care for your trip</h2>
            <a href="{{ path('app_login') }}" class="btn explore-btn">Go Back</a>
        </div>
    </div>
    
    <!-- Right side - Registration form -->
    <div class="right-side">
        <div>
            <img src="{{ asset('assets/ATLAS_LOGO.png') }}" alt="Atlas Logo" class="logo">
        </div>
        
        <div class="mb-2">
            <h1 class="welcome-heading">WELCOME ABOARD</h1>
            <p class="text-secondary">Let's start your journey with us</p>
        </div>
        
        <div class="mb-2 text-center">
            <p class="small">Already have an account? <a href="{{ path('app_login') }}" class="text-decoration-none fw-bold">Sign in here</a></p>
        </div>
        
        {{ form_start(form, {'attr': {'class': 'mb-2', 'id': 'register-form', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
            <div class="form-row">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-user"></i>
                        </span>
                        {{ form_widget(form.firstname, {'attr': {'class': 'form-control' ~ (not form.firstname.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.firstname.vars.valid %} visible{% endif %}">
                        {%- if not form.firstname.vars.valid -%}
                            {{- form_errors(form.firstname)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-user"></i>
                        </span>
                        {{ form_widget(form.lastname, {'attr': {'class': 'form-control' ~ (not form.lastname.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.lastname.vars.valid %} visible{% endif %}">
                        {%- if not form.lastname.vars.valid -%}
                            {{- form_errors(form.lastname)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-birthday-cake"></i>
                        </span>
                        {{ form_widget(form.age, {'attr': {'class': 'form-control' ~ (not form.age.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.age.vars.valid %} visible{% endif %}">
                        {%- if not form.age.vars.valid -%}
                            {{- form_errors(form.age)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-envelope"></i>
                        </span>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (not form.email.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.email.vars.valid %} visible{% endif %}">
                        {%- if not form.email.vars.valid -%}
                            {{- form_errors(form.email)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-phone"></i>
                        </span>
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control' ~ (not form.phone.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.phone.vars.valid %} visible{% endif %}">
                        {%- if not form.phone.vars.valid -%}
                            {{- form_errors(form.phone)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-map-marker-alt"></i>
                        </span>
                        {{ form_widget(form.address, {'attr': {'class': 'form-control' ~ (not form.address.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.address.vars.valid %} visible{% endif %}">
                        {%- if not form.address.vars.valid -%}
                            {{- form_errors(form.address)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </span>
                        {{ form_widget(form.password.first, {'attr': {'class': 'form-control' ~ (not form.password.first.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.password.first.vars.valid %} visible{% endif %}">
                        {%- if not form.password.first.vars.valid -%}
                            {{- form_errors(form.password.first)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </span>
                        {{ form_widget(form.password.second, {'attr': {'class': 'form-control' ~ ((not form.password.vars.valid or not form.password.second.vars.valid) ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.password.vars.valid and form.password.first.vars.valid %} visible{% endif %}">
                        {%- if not form.password.vars.valid and form.password.first.vars.valid -%}
                            {{- form_errors(form.password)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <div class="file-upload-wrapper">
                    <label for="{{ form.profile_image.vars.id }}" class="file-upload-label">
                        <i class="fas fa-cloud-upload-alt me-2"></i> Upload file...
                    </label>
                    {{ form_widget(form.profile_image, {'attr': {'class': 'file-upload-input', 'accept': '.jpeg, .jpg, .png, .gif, .webp, .svg'}}) }}
                    <div id="file-name" class="selected-file">No file selected</div>
                    <div class="error-message{% if not form.profile_image.vars.valid %} visible{% endif %}">
                        {%- if not form.profile_image.vars.valid -%}
                            {{- form_errors(form.profile_image)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
            </div>
            
            <button class="btn btn-signin" type="submit">Sign Up</button>
        {{ form_end(form) }}
        
        <div class="footer-text">
            <p class="text-secondary small mb-0">Terms of service</p>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const profileImageInput = document.getElementById('{{ form.profile_image.vars.id }}');
            const fileNameDisplay = document.getElementById('file-name');
            
            // Handle file name display
            if (profileImageInput && fileNameDisplay) {
                profileImageInput.addEventListener('change', function() {
                    if (this.files && this.files[0]) {
                        fileNameDisplay.textContent = this.files[0].name;
                    } else {
                        fileNameDisplay.textContent = 'No file selected';
                    }
                });
            }
        });
    </script>
{% endblock %} 