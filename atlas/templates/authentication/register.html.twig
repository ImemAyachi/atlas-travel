{% extends 'base.html.twig' %}

{% block title %}Registration - Atlas{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('templates/security/register.css') }}">
    <style>
        /* Logo size adjustment */
        .logo {
            max-width: 100px;
            height: auto;
        }

        /* Form layout fixes */
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .form-group {
            width: 100%;
            min-width: 0;
        }

        .input-group {
            width: 100%;
        }

        .input-container input,
        .form-control {
            width: 100%;
            min-width: 0;
        }

        /* Password requirements styling */
        :root {
            --success-color: #28a745;
            --light-text: #64748b;
        }
        
        .password-requirements {
            background-color: #f8fafc;
            padding: 0.35rem 0.5rem;
            border-radius: 4px;
            border: 1px solid #e2e8f0;
            font-size: 0.7rem;
            width: 100%;
        }

        .password-requirements strong {
            color: #4a5568;
            margin-right: 0.5rem;
        }

        .password-requirements ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: inline;
        }

        .password-requirements li {
            display: inline;
            color: var(--light-text);
            margin-right: 0.75rem;
        }

        .password-requirements li::before {
            content: "â€¢";
            color: var(--primary-color);
            font-weight: bold;
            margin-right: 0.25rem;
        }

        /* Password row specific styling */
        .password-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        
            position: relative;
        }

        .password-row .form-group {
            margin-bottom: 0;
        }

        .password-requirements {
            grid-column: 1 / -1;
            background-color: #f8fafc;
            padding: 0.35rem 0.5rem;
            border-radius: 4px;
            margin: 0.25rem 0;
            border: 1px solid #e2e8f0;
            font-size: 0.7rem;
            width: 100%;
            box-sizing: border-box;
        }

        /* Remove duplicate styles */
        .password-row .password-requirements {
            grid-column: 1 / -1;
        }
    </style>
{% endblock %}

{% block body %}
<div class="row-container">
    <!-- Left side - Background image -->
    <div class="left-side">
        <div class="atlas-brand">
            ATLAS
        </div>
        
        <div class="bottom-content">
            <p class="tagline">Plan your dream vacation.</p>
            <h2 class="slogan">We guide and<br>care for your trip</h2>
            <a href="{{ path('app_login') }}" class="btn explore-btn">Go Back</a>
        </div>
    </div>
    
    <!-- Right side - Registration form -->
    <div class="right-side">
        <div style="margin-bottom: 0.5rem;">
            <img src="{{ asset('assets/ATLAS_LOGO.png') }}" alt="Atlas Logo" class="logo">
        </div>
        
        <div style="margin-bottom: 0.25rem;">
            <h1 class="welcome-heading">WELCOME ABOARD</h1>
            <p class="text-secondary" style="margin-top: 2px; margin-bottom: 5px;">Let's start your journey with us</p>
        </div>
        
        <div style="margin-bottom: 1.5rem;" class="text-center">
            <p class="small" style="margin: 0;">Already have an account? <a href="{{ path('app_login') }}" class="text-decoration-none fw-bold">Sign in here</a></p>
        </div>
        
        {{ form_start(form, {'attr': {'class': 'mb-2', 'id': 'register-form', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
            <div class="form-row">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-user"></i>
                        </span>
                        {{ form_widget(form.firstname, {'attr': {'class': 'form-control' ~ (not form.firstname.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.firstname.vars.valid %} visible{% endif %}">
                        {%- if not form.firstname.vars.valid -%}
                            {{- form_errors(form.firstname)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-user"></i>
                        </span>
                        {{ form_widget(form.lastname, {'attr': {'class': 'form-control' ~ (not form.lastname.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.lastname.vars.valid %} visible{% endif %}">
                        {%- if not form.lastname.vars.valid -%}
                            {{- form_errors(form.lastname)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-birthday-cake"></i>
                        </span>
                        {{ form_widget(form.age, {'attr': {'class': 'form-control' ~ (not form.age.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.age.vars.valid %} visible{% endif %}">
                        {%- if not form.age.vars.valid -%}
                            {{- form_errors(form.age)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-envelope"></i>
                        </span>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (not form.email.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.email.vars.valid %} visible{% endif %}">
                        {%- if not form.email.vars.valid -%}
                            {{- form_errors(form.email)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-phone"></i>
                        </span>
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control' ~ (not form.phone.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.phone.vars.valid %} visible{% endif %}">
                        {%- if not form.phone.vars.valid -%}
                            {{- form_errors(form.phone)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-map-marker-alt"></i>
                        </span>
                        {{ form_widget(form.address, {'attr': {'class': 'form-control' ~ (not form.address.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.address.vars.valid %} visible{% endif %}">
                        {%- if not form.address.vars.valid -%}
                            {{- form_errors(form.address)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
            </div>

            <div class="password-row">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </span>
                        {{ form_widget(form.password.first, {'attr': {'class': 'form-control' ~ (not form.password.first.vars.valid ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.password.first.vars.valid %} visible{% endif %}">
                        {%- if not form.password.first.vars.valid -%}
                            {{- form_errors(form.password.first)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </span>
                        {{ form_widget(form.password.second, {'attr': {'class': 'form-control' ~ ((not form.password.vars.valid or not form.password.second.vars.valid) ? ' input-error' : '')}}) }}
                    </div>
                    <div class="error-message{% if not form.password.vars.valid and form.password.first.vars.valid %} visible{% endif %}">
                        {%- if not form.password.vars.valid and form.password.first.vars.valid -%}
                            {{- form_errors(form.password)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>

                <div class="password-requirements">
                    <strong>Requirements:</strong>
                    <ul>
                        <li id="reg-length">8+ chars</li>
                        <li id="reg-uppercase">1 uppercase</li>
                        <li id="reg-number">1 number</li>
                        <li id="reg-special">1 special</li>
                    </ul>
                </div>
            </div>
            
            <div class="form-group">
                <div class="file-upload-wrapper">
                    <label for="{{ form.profile_image.vars.id }}" class="file-upload-label">
                        <i class="fas fa-cloud-upload-alt me-2"></i> Upload file...
                    </label>
                    {{ form_widget(form.profile_image, {'attr': {'class': 'file-upload-input', 'accept': '.jpeg, .jpg, .png, .gif, .webp, .svg'}}) }}
                    <div id="file-name" class="selected-file">No file selected</div>
                    <div class="error-message{% if not form.profile_image.vars.valid %} visible{% endif %}">
                        {%- if not form.profile_image.vars.valid -%}
                            {{- form_errors(form.profile_image)|striptags -}}
                        {%- endif -%}
                    </div>
                </div>
            </div>
            
            <button class="btn btn-signin" type="submit">Sign Up</button>
        {{ form_end(form) }}
        
        <div class="footer-text">
            <p class="text-secondary small mb-0">Terms of service</p>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const profileImageInput = document.getElementById('{{ form.profile_image.vars.id }}');
            const fileNameDisplay = document.getElementById('file-name');
            const passwordInputId = '{{ form.password.first.vars.id }}';
            const passwordInput = document.getElementById(passwordInputId);
            
            // Handle file name display
            if (profileImageInput && fileNameDisplay) {
                profileImageInput.addEventListener('change', function() {
                    if (this.files && this.files[0]) {
                        fileNameDisplay.textContent = this.files[0].name;
                    } else {
                        fileNameDisplay.textContent = 'No file selected';
                    }
                });
            }

            // Real-time password requirements check
            if (passwordInput) {
                const requirements = [
                    { id: 'reg-length',    test: (p) => p.length >= 8 },
                    { id: 'reg-uppercase', test: (p) => /[A-Z]/.test(p) },
                    { id: 'reg-number',    test: (p) => /[0-9]/.test(p) },
                    { id: 'reg-special',   test: (p) => /[!@#$%^&*(),.?":{}|<>]/.test(p) } // Expanded special chars
                ];

                const validatePassword = (password) => {
                    requirements.forEach(req => {
                        const element = document.getElementById(req.id);
                        if (element) {
                            element.style.color = req.test(password) ? 'var(--success-color)' : 'var(--light-text)';
                        } else {
                            console.error(`Requirement element with ID ${req.id} not found.`); // Added for debugging
                        }
                    });
                };

                passwordInput.addEventListener('input', function(e) {
                    validatePassword(e.target.value);
                });

                // Initial validation check in case of browser autofill
                validatePassword(passwordInput.value); 

            } else {
                console.error(`Password input element with ID ${passwordInputId} not found.`); // Added for debugging
            }
        });
    </script>
{% endblock %} 